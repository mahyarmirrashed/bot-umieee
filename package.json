{
	"name": "bot-university-umieee-new",
	"version": "1.4.0",
	"description": "Bot for UMIEEE Discord server.",
	"main": "index.js",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only --poll ./src/index.ts",
		"lint": "prettier --write .",
		"build": "tsc --build tsconfig.json"
	},
	"keywords": [],
	"author": "Mahyar Mirrashed <mah.mirr@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-angular": "^12.1.4",
		"@types/glob": "^7",
		"@types/node": "^15.12.2",
		"prettier": "^2.3.1",
		"ts-node": "^10.0.0",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.3.3"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"scope-case": [
				2,
				"always",
				"pascal-case"
			],
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test"
				]
			]
		}
	},
	"dependencies": {
		"consola": "^2.15.3",
		"discord.js": "^12.5.3",
		"glob": "^7.1.7",
		"mongoose": "^5.12.14"
	},
	"private": true
}
